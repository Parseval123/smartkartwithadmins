<% provide(:title, 'Sign up Manager') %>
<h2>Sign up Manager</h2>
<div class="row">
	<div class="col-md-6 col-md-offset-3">

	<%= form_for(@manager) do |f| %>

	<%= render 'shared/error_messages2' %>

	<%= f.label :name %>
	<%= f.text_field :name %>

	<%= f.label :surname %>
	<%= f.text_field :surname %>

	<%= f.label :yearofbirth %>
	<%= f.number_field :yearofbirth %>

	<%= f.label :email %>
	<%= f.text_field :email %>

        <%= f.label :tel %>
	<%= f.text_field :tel %>

        <%= f.label :curriculum %>
	<%= f.text_area :curriculum %>

	<%= f.label :password %>
	<%= f.password_field :password %>

	<%= f.label :password_confirmation, "Confirmation" %>
	<%= f.password_field :password_confirmation %>

	<%= f.submit "Create my account", class: "btn btn-primary" %>
	<% end %>

	</div>
</div>
